{
  "name": "fae-intelligence-html-blog",
  "version": "1.0.0",
  "description": "Static HTML blog system for Fae Intelligence",
  "main": "index.js",
  "scripts": {
    "build": "node scripts/build.js",
    "watch": "node scripts/watch.js",
    "serve": "npx http-server . -p 8080",
    "dev": "npm run build && npm run serve",
    "sync": "node scripts/sync-from-firebase.js",
    "deploy": "npm run build && npm run upload-to-cdn",
    "build:css": "npx tailwindcss -i ./assets/css/source.css -o ./assets/css/blog-styles.css"
  },
  "dependencies": {
    "cssnano": "^6.0.3",
    "express": "^5.1.0",
    "firebase": "^10.7.1",
    "fuse.js": "^7.0.0",
    "html-minifier-terser": "^7.2.0",
    "markdown-it": "^14.0.0",
    "mustache": "^4.2.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "chokidar": "^3.5.3",
    "http-server": "^14.1.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "terser": "^5.26.0"
  },
  "keywords": [
    "blog",
    "static",
    "html",
    "firebase",
    "fae-intelligence"
  ],
  "author": "Fae Intelligence",
  "license": "MIT"
}
